{
  "name": "blui-workspace",
  "version": "1.0.1",
  "description": "BLUI monorepo with component library and documentation",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "install:all": "npm install && npm install --workspaces",
    "dev": "npm run dev -w blui-docs",
    "dev:docs": "npm run dev -w blui-docs",
    "build": "npm run build -w blui && npm run build -w blui-docs",
    "build:lib": "npm run build -w blui",
    "build:docs": "npm run build -w blui-docs",
    "lint": "npm run lint --workspaces --if-present",
    "docs:generate": "node scripts/generate-docs.js",
    "docs:watch": "node scripts/watch-docs.js",
    "changelog:generate": "node scripts/generate-changelog.js",
    "version": "node scripts/version-bump.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.0.15",
    "@types/react": "^18.0.0",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.30.1",
    "eslint-plugin-jsdoc": "^51.4.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4"
  }
}
