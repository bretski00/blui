{
  "name": "blui",
  "version": "1.0.0",
  "description": "A React component library with extensible theme system",
  "type": "module",
  "main": "./dist/blui.umd.js",
  "module": "./dist/blui.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/blui.js",
      "require": "./dist/blui.umd.js"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md",
    "API_REFERENCE.md",
    "FRAMEWORK_README.md"
  ],
  "keywords": [
    "react",
    "ui",
    "components",
    "typescript",
    "theme",
    "design-system"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bretski00/blui.git"
  },
  "bugs": {
    "url": "https://github.com/bretski00/blui/issues"
  },
  "homepage": "https://github.com/bretski00/blui#readme",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.0.15",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4"
  }
}
