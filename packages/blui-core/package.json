{
  "name": "@bretski00/blui",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "version": "1.0.3",
  "description": "A React component library with extensible theme system",
  "type": "module",
  "main": "./dist/blui.umd.js",
  "module": "./dist/blui.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/blui.js",
      "require": "./dist/blui.umd.js"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "react",
    "ui",
    "components",
    "typescript",
    "theme",
    "design-system"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bretski00/blui.git",
    "directory": "packages/blui-core"
  },
  "bugs": {
    "url": "https://github.com/bretski00/blui/issues"
  },
  "homepage": "https://github.com/bretski00/blui#readme",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc -p tsconfig.build.json",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint .",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^19.1.8",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^2.1.8",
    "jsdom": "^26.0.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vitest": "^2.1.8"
  }
}
